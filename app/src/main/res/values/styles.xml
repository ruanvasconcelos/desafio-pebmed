<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Home Thumb View Holder -->
    <style name="HomeThumbViewHolderRootView">
        <item name="android:layout_margin">@dimen/spacing_sixteen</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="HomeThumbViewHolderImageView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="HomeThumbViewHolderTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textsize_ten</item>
    </style>

    <!-- Home Title View Holder -->
    <style name="HomeTitleViewHolderTextView">
        <item name="android:layout_marginTop">@dimen/spacing_sixteen</item>
        <item name="android:layout_marginLeft">@dimen/spacing_sixteen</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textsize_fourteen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Details Activity -->
    <style name="DetailsActivityCoordinatorImage">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="DetailsActivityDetailsContainer">
        <item name="android:layout_marginLeft">@dimen/spacing_sixteen</item>
    </style>

    <style name="DetailsActivitySectionTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textsize_fourteen</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/spacing_sixteen</item>
        <item name="android:paddingBottom">@dimen/spacing_sixteen</item>
    </style>

    <style name="DetailsActivitySectionContent">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textsize_eleven</item>
        <item name="android:paddingBottom">@dimen/spacing_sixteen</item>
    </style>
</resources>