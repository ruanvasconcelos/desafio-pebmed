<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Medical List View Holder -->
    <style name="ViewHolderMedicalRootView">
        <item name="android:layout_margin">@dimen/spacing_sixteen</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ViewHolderMedicalImageView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ViewHolderMedicalTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textsize_eleven</item>
    </style>
</resources>